---
import { Icon } from 'astro-icon/components';

interface Props {
   url: string;
   label: string;
   icon?: string;
   isActive: boolean;
}

const { url, label, icon, isActive } = Astro.props;
---

<li class="flex flex-col items-center">
   <a
      href={url}
      class={`block relative text-gray-800 px-4 py-2 rounded-2xl transition-all duration-300 ease-in-out ${
         isActive
            ? 'bg-[#D593D1] text-white'
            : 'hover:bg-[#D593D1] hover:text-white'
      }`}
   >
      <Icon
         name={icon}
         class={`w-6 h-6 transition-transform duration-300 ease-in-out ${isActive ? 'scale-110' : ''}`}
      />
   </a>
   <span class="text-xs text-center mt-1">{label}</span>
</li>
