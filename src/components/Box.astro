---
interface Props {
   title?: string;
}

const { title } = Astro.props;
import DarkMode from './DarkMode.svelte';
---

<div class="flex flex-col h-full w-full">
   <div
      class="bg-white dark:border-transparent   border-2 rounded-3xl shadow-lg flex flex-col h-full w-full p-6 dark:bg-darkContainer"
   >
      {
         title && (
            <>
            <div class="flex justify-between items-center my-4">
               <div class="flex-1"></div>
               <div class="text-center text-3xl font-bold my-4">
                  <span class="text-transparent bg-gradient-to-r  from-black dark:from-darkText via-gray-800 dark:via-darkMuted to-[#D593D1] dark:to-[#FF1493] bg-clip-text">
                     {title}
                  </span>
               </div>
               <div class="flex-1  flex justify-end">
                  <DarkMode client:load/>
               </div>
            </div> 

               <hr class="border-gray-300 border-t-1 w-[95%] mx-auto" />
            </>
         )
      }
      <div class="p-6">
         <slot />
      </div>
   </div>
</div>
