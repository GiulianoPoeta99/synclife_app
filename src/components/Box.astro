---
interface Props {
   title?: string;
}

const { title } = Astro.props;
---

<div class="flex flex-col h-full w-full">
   <div
      class="bg-white border-2 rounded-3xl shadow-lg flex flex-col h-full w-full p-6"
   >
      {
         title && (
            <>
               <div class="text-center text-3xl text-bold text-gray-800 my-4">
                  {title}
               </div>
               <hr class="border-gray-300 border-t-1 w-[95%] mx-auto" />
            </>
         )
      }
      <div class="p-6">
         <slot />
      </div>
   </div>
</div>
