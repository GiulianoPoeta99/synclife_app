---
interface Props {
   title?: string;
}

const { title } = Astro.props;
---

<div class="flex flex-col h-full w-full">
   <div
      class="bg-white border-2 rounded-3xl shadow-lg flex flex-col h-full w-full p-6"
   >
      {
         title && (
            <>
               <div class="text-center text-3xl font-bold my-4">
                  <span class="text-transparent bg-gradient-to-r from-black via-gray-800 to-[#D593D1] bg-clip-text">
                     {title}
                  </span>
               </div>

               <hr class="border-gray-300 border-t-1 w-[95%] mx-auto" />
            </>
         )
      }
      <div class="p-6">
         <slot />
      </div>
   </div>
</div>
