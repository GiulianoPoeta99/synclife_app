{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020", // Cambiado para compatibilidad con `bundler`
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
